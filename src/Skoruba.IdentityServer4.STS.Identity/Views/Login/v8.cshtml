@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Skoruba.IdentityServer4.STS.Identity
@using Skoruba.IdentityServer4.STS.Identity.Configuration.Interfaces
@model Skoruba.IdentityServer4.STS.Identity.ViewModels.Account.LoginViewModel
@inject IRootConfiguration RootConfiguration
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login V8</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/login/v8/images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/login/v8/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/login/v8/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/login/v8/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/login/v8/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/login/v8/vendor/animsition/css/animsition.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/login/v8/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/login/v8/vendor/daterangepicker/daterangepicker.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/login/v8/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/login/v8/css/main.css">
    <!--===============================================================================================-->
</head>
<body>

    <div class="limiter">
        @await Html.PartialAsync("_ValidationSummary")
        <div class="container-login100">
            @if (Model.EnableLocalLogin)
            {
                <div class="wrap-login100">
                    <form asp-route="Login" class="login100-form validate-form p-l-55 p-r-55 p-t-178">
                        <input type="hidden" asp-for="ReturnUrl" />
                        <span class="login100-form-title">
                            Sign In
                        </span>

                        <fieldset>
                            <div class="wrap-input100 validate-input m-b-16" data-validate="Please enter username">
                                <input asp-for="Username" class="input100" type="text" placeholder="用户名" autofocus>
                                <span class="focus-input100"></span>
                            </div>

                            <div class="wrap-input100 validate-input" data-validate="Please enter password">
                                <input asp-for="Password" autocomplete="off" class="input100" type="password" placeholder="密码">
                                <span class="focus-input100"></span>
                            </div>

                            @if (Model.AllowRememberLogin)
                            {
                                <div>
                                    记住密码
                                    <input asp-for="RememberLogin" type="checkbox">
                                </div>
                            }

                            <div class="text-right p-t-13 p-b-23">
                                <a asp-action="ForgotPassword" asp-controller="Account" value="forgot" class="txt2">
                                    忘记密码?
                                </a>
                            </div>

                            <div class="container-login100-form-btn">
                                <button name="button" value="login" class="login100-form-btn">
                                    登录
                                </button>
                            </div>

                            @if (RootConfiguration.RegisterConfiguration.Enabled)
                            {
                                <div class="flex-col-c p-t-170 p-b-40">
                                    <a asp-action="Register" asp-controller="Account" value="forgot" class="txt3">
                                        注册
                                    </a>
                                </div>
                            }
                        </fieldset>
                    </form>
                </div>
            }
        </div>
    </div>

    <!--===============================================================================================-->
    <script src="~/login/v8/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/login/v8/vendor/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/login/v8/vendor/bootstrap/js/popper.js"></script>
    <script src="~/login/v8/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/login/v8/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/login/v8/vendor/daterangepicker/moment.min.js"></script>
    <script src="~/login/v8/vendor/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script src="~/login/v8/vendor/countdowntime/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script src="~/login/v8/js/main.js"></script>
</body>
</html>