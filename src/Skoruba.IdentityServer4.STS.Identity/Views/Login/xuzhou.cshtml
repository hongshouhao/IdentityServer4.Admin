@using Skoruba.IdentityServer4.STS.Identity.Configuration.Interfaces
@model Skoruba.IdentityServer4.STS.Identity.ViewModels.Account.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>徐州经济技术开发区规划办文系统</title>
    <link rel="stylesheet" href="/login/xuzhou/lib/bootstrap.min.css">
    <style>
        html, body {
            height: 100%;
            width: 100%;
            margin: 0;
            padding: 0;
            overflow: hidden;
        }

        .login-main {
            height: 100%;
            display: flex;
            flex-direction: column;
        }

            .login-main .login-header {
                flex-grow: 1;
                flex-shrink: 1;
                position: relative;
                display: flex;
                margin-bottom: 20px;
            }

                .login-main .login-header .header-info {
                    position: absolute;
                    bottom: 0;
                    height: 70px;
                    margin-left: 20px;
                    vertical-align: top;
                }

                    .login-main .login-header .header-info img {
                        vertical-align: top;
                        height: 60px;
                    }

                    .login-main .login-header .header-info h2 {
                        display: inline-block;
                        line-height: 60px;
                        margin-left: 10px;
                        color: #075dad;
                    }

            .login-main .login-body {
                height: 52%;
                width: 100%;
                background-image: url("/login/xuzhou/img/ban5.png");
                background-size: 100% 100%;
                background-repeat: no-repeat;
                display: flex;
                align-items: center;
            }

                .login-main .login-body .login-form {
                    width: 300px;
                    height: 300px;
                    z-index: 100;
                    border-radius: 5px;
                    padding: 20px;
                    background-color: rgba(255,255,255,.76) !important;
                    display: flex;
                    flex-wrap: wrap;
                    justify-content: center;
                    align-items: center;
                    margin-left: 70%;
                }

                    .login-main .login-body .login-form form h4 {
                        width: 100%;
                        font-size: 14pt;
                        text-align: center;
                        color: #1f1f1f;
                        letter-spacing: 2px;
                    }

            .login-main .login-footer {
                flex-grow: 1;
                flex-shrink: 1;
                width: 100%;
                padding-top: 20px;
            }

                .login-main .login-footer p {
                    text-align: center;
                    font-size: 13px;
                    color: #959595;
                }
    </style>
</head>

<body>
    <div class="login-main">
        <div class="login-header">
            <div class="header-info">
                <img src="/login/xuzhou/img/logo.png" alt="">
                <h2>徐州经济技术开发区规划办文系统</h2>
            </div>
        </div>

        @await Html.PartialAsync("_ValidationSummary")

        <div class="login-body">
            <div class="login-form">
                <h4>用户登录</h4>
                <form asp-route="Login">
                    <input type="hidden" asp-for="ReturnUrl" />
                    <fieldset>
                        <div class="form-group row align-items-center">
                            <label for="username" class="col-auto col-form-label">账户</label>
                            <div class="col-sm-9">
                                <input asp-for="Username" type="text" autofocus id="username">
                            </div>
                        </div>
                        <div class="form-group row align-items-center">
                            <label for="password" class="col-auto col-form-label">密码</label>
                            <div class="col-sm-9">
                                <input asp-for="Password" autocomplete="off" type="password" id="password">
                            </div>
                        </div>

                        <div>
                            记住密码
                            <toggle-button>
                                <input asp-for="RememberLogin" type="checkbox">
                            </toggle-button>
                        </div>

                        <button name="button" value="login" long class="btn btn-primary btn-block">登录</button>
                    </fieldset>
                </form>
            </div>
        </div>
        <div class="login-footer">
            <p>版本：徐州经济技术开发区规划办文系统V1.0</p>
            <p>技术支持：苏州工业园区测绘地理信息有限公司</p>
        </div>
    </div>
    <script src="/login/xuzhou/lib/jquery.min.js"></script>
    <script src="/login/xuzhou/lib/popper.min.js"></script>
    <script src="/login/xuzhou/lib/bootstrap.min.js"></script>
</body>
</html>